- @title = @topic.subject
- @meta_desc = @posts.first.text

#topic{ :class => ( @topic.locked? ? 'locked' : 'unlocked' ) }
  = render :partial => 'forem/topics/head', :locals => { :topic => @topic }

  = paginate @posts
  %table#posts.subdued
    %tbody
      = render :partial => "forem/posts/post", :collection => @posts
