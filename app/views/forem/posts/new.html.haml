= render :partial => 'forem/forums/head', :locals => { :forum => @topic.forum }

= form_for [@topic, @post], :html => {:class => :module, :style => "width: 600px; margin: 0"} do |form|
  %h2= t("forem.post.new")

  = render :partial => "form", :locals => { :f => form }

  %button.full= t("forem.post.buttons.reply")

= render :partial => "forem/shared/wmd"

#topic{ :class => ( @topic.locked? ? 'locked' : 'unlocked' ) }
  - @posts = @topic.posts.limit(10).reverse

  %h2= @topic.subject

  %table#posts.subdued
    %tbody
      = render :partial => "forem/posts/post", :collection => @posts
