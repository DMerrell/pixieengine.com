#tile_editor_templates.template

  .layer_select.template
    .choice
      .name ${name}
      .show.on

  .saved_selection.template
    .selection
      .name ${text}
      .preview

  .editor.template
    .content
      %section
        .screen
          .layers
            .cursor
            .selection

      .actions.top
        %button.save Save

      .module.right
        .component
          %h3 Layers
          %button.new New Layer
          .layer_select
        .component{ :style => "display: none"}
          %h3 Properties
          %table.prop_editor
          %button.prop_save Save Properties
        .component
          %h3 Saved Selections
          .saved_selections
        .component.tile_select
          %h3
            Tiles
          .tile_actions
            %button.new_tile
              = icon_image "image_add"
              New
            %button.delete_tile
              = icon_image "image_delete"
              Delete
          .tiles
            - sprites = Collection.find(params[:tileset_id] || 355).sprites
            - sprites.each do |sprite|
              - active = if sprite == sprites.first
                - "primary"
              - elsif sprite == sprites.second
                - "secondary"

              = image_tag(sprite.image.url, :alt => sprite.display_name, :class => active)

      .tools.module.left
        .tool.primary.secondary{ :"data-tool" => "stamp"}
        .tool{ :"data-tool" => "eraser"}
        .tool{ :"data-tool" => "fill"}
        .tool{ :"data-tool" => "selection"}
