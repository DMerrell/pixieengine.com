- form_for user do |form|
  = form.error_messages
  %p
    = form.label :display_name
    = form.text_field :display_name
  %p
    = form.label :email
    = form.text_field :email
  %p
    = form.label :password
    = form.password_field :password

  = form.submit "Sign Up"

:javascript
  $(function() {
    $('#user_submit').click(function() {
      _gaq.push(['_trackEvent', 'action_button', 'register']);
    });
  });