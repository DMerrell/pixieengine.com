- form_for user do |form|
  = form.error_messages
  %p
    = form.label :email
    = form.text_field :email
  %p
    = form.label :password
    = form.password_field :password
  %p
    = form.label :display_name
    = form.text_field :display_name

  .right
    = form.submit "Register"


  %input{:type => :hidden, :name => :authentication_type, :value => :user}
  %input{:type => :submit, :id => :twitter_oauth_provider, :name => :oauth_provider, :value => :twitter}
