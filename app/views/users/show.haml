%style
  :sass
    @import util
    @import branded

    .favorite_color
      +inline-block
      border: 1px solid light_gray
      height: 50px
      width: 50px

    #show_projects, #show_sprites
      float: right
      font-size: 120%
      margin-top: 0.7em

    .description
      text-align: justify

    .tasks
      float: right
      padding: 1em
      width: 300px

    .featured_sprites, .featured_projects, .comments
      margin: 2em 0
      padding: 1em 2em

    .sprite_container
      +border-radius
      +bounds(48px)
      +pop-shadow

      background-color: white
      cursor: pointer
      display: inline-block
      margin-right: 6px
      margin-bottom: 3px

      &.extras
        display: none

      &:hover
        background-color: $hover

      a
        +bounds(100%)
        +contents-centered

        display: block

    .project
      +border-radius
      +bounds(462px, 172px)
      +box-sizing(border-box)
      +box-shadow(rgba(0, 0, 0, 0.15), 2px, 2px, 2px, 0, inset)
      +inline-block

      background-color: $light_background
      margin-bottom: 1em
      margin-right: 2em
      overflow: hidden
      padding: 1em
      position: relative

      &:nth-child(n + 7)
        display: none

      .show_all &:nth-child(n + 7)
        display: inline-block

      &:nth-child(2n)
        margin-right: 0

      .hover_actions
        background-color: $hover
        display: none
        position: absolute
        right: 1em
        top: 1em

      &:hover
        background-color: $hover

        .hover_actions
          display: inline-block

      .gloss
        +gloss

        display: inline-block
        position: absolute
        left: 1em

      .thumb
        float: left
        margin-bottom: 1em
        margin-right: 1em

        &.fancy
          img
            +border-radius(17px)
            +box-shadow(#000F1A, 0, 4px, 6px)

            .light &
              +box-shadow(#8c8c8c, 0, 4px, 6px)

      .title
        a
          color: $dark_text
          font-size: 20px
          font-weight: 600
          text-decoration: none
          white-space: nowrap

          .light &
            color: $light_text

    .module
      > h2
        display: inline-block

      button
        +bounds(110px, 35px)

        font-size: 115%
        margin-left: 1em
        margin-top: 0

    .task
      font-size: 1.1em
      margin-bottom: 0.5em
      position: relative
      img
        vertical-align: top
      .value
        left: 200px
        position: absolute
        top: 0

    .profile
      min-height: 284px
      margin-bottom: 1em
      padding-top: 1em

      h2
        a
          font-size: 0.75em
          letter-spacing: 0
          margin-left: 0.25em

      label
        margin-bottom: 1em

      p
        margin-bottom: 0.5em
        width: 400px

      .avatar
        float: left
        margin: 0 1em 1em 0

.feature
  .profile
    = render :partial => "tasks", :user => user

    %h2
      = user.display_name
      - if current_user?
        = link_to "Edit profile", [:edit, user]
    .info
      = image_tag user.avatar.url(:large), :class => :avatar
      - if user.profile
        %p= user.profile.html_safe

    .clear

    %label.inline
      %h3 Favorite Color
      .favorite_color{:style => "background: ##{user.favorite_color}"}

  - if user.projects.size > 0
    .featured_projects.module
      %h2
        ="Your" if current_user?
        Projects
      - if current_user?
        %button.clickable.complement
          New Project
          = link_to "", new_project_path, :style => "display: none;"
        %button.clickable.complement
          Tutorials
          = link_to "", projects_path(:filter => "tutorial"), :style => "display: none;"
      - if user.projects.size > 6
        %a#show_projects Show all
      .projects
        - user.projects.order("updated_at DESC").each do |project|
          = render :partial => "users/project", :locals => { :project => project }
  - else
    - if current_user?
      %button.clickable.complement
        New Project
        = link_to "", new_project_path, :style => "display: none;"

  - if user.sprites.size > 0
    .featured_sprites.module
      %h2
        ="Your" if current_user?
        Sprites
      - if current_user?
        %button.clickable.complement
          New Sprite
          = link_to "", new_sprite_path, :style => "display: none;"
      - if user.sprites.size > 32
        %a#show_sprites Show all
      .sprites
        - user.sprites.each_with_index do |sprite, i|
          = render :partial => "index_sprites", :locals => { :sprite => sprite, :i => i }
  - else
    - if current_user?
      %button.clickable.complement
        New Sprite
        = link_to "", new_sprite_path, :style => "display: none;"

  - if (messages = Comment.for_user(user).order("id DESC").limit(10)).size > 0
    .comments.module
      .messages
        %h2
          Messages

        = render :partial => messages

:coffeescript
  $ ->
    $('#show_projects').click ->
      $this = $(this)

      if $this.text() == "Show all"
        $('.projects').addClass("show_all")
        $this.text("Hide")
      else
        $('.projects').removeClass("show_all")
        $this.text("Show all")

    $('#show_sprites').click ->
      $this = $(this)

      if $this.text() == "Show all"
        $('.sprite_container.extras').css('display', 'inline-block')
        $this.text('Hide')
      else
        $('.sprite_container.extras').hide()
        $this.text('Show all')
