- @title = "Sound Gallery"

- @sounds.each do |sound|
  = render :partial => "developer/apps/import_sound", :locals => {:import_sound => sound}

#preview_sound
  %audio

:coffeescript
  $('.control').mousedown ->
    src = $(this).parent().data('wav_src') || $(this).parent().data('mp3_src')

    $('#preview_sound audio').attr('src', src).get(0).play()

%style
  :sass
    @import util
    @import partials/base

    .import_sound
      +border-radius
      +bounds(72px)

      background: #fff url(/images/wav.png) no-repeat center center
      color: #000
      display: inline-block
      font-size: 10px
      margin-right: 10px
      margin-bottom: 10px
      position: relative
      text-align: center

      &.selected
        background-color: $pixie_primary

      img
        +max-bounds(64px)

      span
        position: absolute
        right: 0
        left: 0
        bottom: 0
        top: 0
        margin: auto

      .control
        +bounds(25px, 29px)

        position: absolute
        right: -11px
        bottom: -15px
        background-image: url(/images/play.png)
        cursor: pointer