%style
  :sass
    #fullscreen
      height: auto

    .gallery
      padding-bottom: 1em

    .pagination
      margin: 0
      width: 100%

    a.button
      margin-right: 0

    .filters
      float: right
      padding: 0.7em 0.5em 0.7em 0

      .filter
        margin: 0
        margin-right: -1px

        &.active
          color: #333

- @title = "Project Gallery"

- content_for :javascript do
  = javascript_include_tag "routers/projects_gallery"

  :coffeescript
    Pixie.Routers.Projects.App = new Pixie.Routers.Projects.App

.gallery
