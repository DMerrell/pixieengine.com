= stylesheet_link_tag "branded"

%style
  :sass
    #fullscreen
      height: auto

    .gallery
      padding-bottom: 1em

    a.button
      margin-right: 0

    .filters
      float: right

    .spinner
      display: none
      margin-left: 1em

- @title = "Project Gallery"

- content_for :javascript do
  = javascript_include_tag "views/projects/filtered_gallery"

  :coffeescript
    $ ->
      #{ActiveRecord::Base.include_root_in_json = false}
      projects_gallery = new window.Pixie.Views.Projects.FilteredGallery
      projects_gallery.collection.reset(projects_gallery.collection.parse(#{@projects_data.to_json}))

.gallery
