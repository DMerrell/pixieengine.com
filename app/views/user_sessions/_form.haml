= form_for @user_session || UserSession.new, :url => authenticate_path do |form|

  = form.error_messages

  = form.hidden_field :login, :value => "yes"
  %p
    = form.label :email
    = form.text_field :email

  %p
    = form.label :password
    = form.password_field :password
    = link_to "Forgot your password?", new_password_reset_path

  .actions
    %button Log In

%style
  :sass
    @import partials/base
    @import util

    form .actions button
      +bounds(300px, 40px)

      font-size: 170%
