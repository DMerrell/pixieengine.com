= form_for @user_session || UserSession.new, :url => authenticate_path do |form|

  = form.error_messages

  = form.hidden_field :login, :value => "yes"
  %p
    = form.label :email
    = form.text_field :email

  %p
    .relative
      = form.label :password
      = form.password_field :password
      = link_to image_tag('/images/icons/help.png', :alt => "Forgot your password?", :title => "Forgot your password?", :id => "forgot_password_link"), new_password_reset_path

  .actions
    %button#log_in Log In

%style
  :sass
    @import partials/base
    @import util

    #log_in
      +bounds(300px, 40px)

      font-size: 170%

    #new_user_session
      .relative
        position: relative

        a
          img
            bottom: 9px
            right: 7px
            position: absolute
