- form_for @user_session || UserSession.new, :html => { :class => 'login module' }, :url => authenticate_path do |form|
  = form.error_messages
  %h1 Log in or register

  %label
    %h3 What is your email address?
    = form.text_field :email

  %h3 Do you have a Pixie password?

  %label
    = form.radio_button :login, "no"
    No, I am new

  %label
    = form.radio_button :login, "yes"
    Yes, I have a password

    .relative
      = form.password_field :password
      = link_to image_tag('/images/icons/help.png', :alt => "Forgot your password?", :title => "Forgot your password?", :id => "forgot_password_link"), new_password_reset_path

  %button.full#user_session_submit Log In

:coffeescript
  $ ->
    $('#forgot_password_link').tipsy
      delayIn: 500
      delayOut: 500
      fade: 50
      gravity: 'w'
      opacity: 1

    loginMode = (login) ->
      if login
        $('#user_session_password').removeAttr('disabled');
        $('#user_session_submit').text('Log In')
      else
        $('#user_session_password').attr('disabled', true)
        $('#user_session_submit').text('Sign Up')

    $('#user_session_login_yes, #user_session_login_no').change ->
      loginMode($(this).val() == 'yes')

    setTimeout ->
      if $('#user_session_email').val()
        $('#user_session_login_yes').click()
        loginMode(true)
      else
        $('#user_session_login_no').click()
        loginMode(false)
    , 10

    trackPageview("/event/login_screen")

%style
  :sass
    @import partials/base
    @import util

    #user_session_password
      margin-right: 0
    #new_user_session
      .relative
        position: relative

        a
          img
            bottom: 0
            margin: auto
            position: absolute
            right: 7px
            top: 0
